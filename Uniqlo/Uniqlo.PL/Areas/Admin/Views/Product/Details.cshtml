@model Product

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product Info</h6>
        </div>
        <div class="card-body">
            <h1>@Model.Title</h1>
            <p>Id: @Model.Id</p>
            <p>Old Price: @Model.OldPrice</p>
            <p>New Price: @Model.NewPrice</p>
            <p>Deleted: @Model.IsDeleted</p>
            <p>Create Time: @Model.CreatedAt</p>
            <p>Last Modified Time: @Model.UpdatedAt</p>
            <p>Category: @Model.Category.Title</p>
        </div>
    </div>
</div>