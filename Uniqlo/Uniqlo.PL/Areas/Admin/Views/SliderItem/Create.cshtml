@model SliderItem

<form asp-action=@(Model is null ? "Create" : "Update") class="container" method="POST">
    <h2 class="my-4">@(Model is null ? "Add" : "Update") Slider Item</h2>
    <div class="mb-3">
        <label class="form-label" asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ButtonText">Button Label</label>
        <input class="form-control" asp-for="ButtonText" />
        <span class="text-danger" asp-validation-for="ButtonText"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Url">URL</label>
        <input class="form-control" asp-for="Url" />
        <span class="text-danger" asp-validation-for="Url"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="BackgroundImagePath">Background Image Path</label>
        <input class="form-control" asp-for="BackgroundImagePath" placeholder="2.jpg" />
        <span class="text-danger" asp-validation-for="BackgroundImagePath"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>