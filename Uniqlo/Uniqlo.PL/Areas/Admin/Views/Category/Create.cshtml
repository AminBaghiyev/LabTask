@using Uniqlo.PL.Areas.Admin.ViewModels.CategoryVMs
@model FormCategoryVM

<form asp-action=@(Model is null ? "Create" : "Update") class="container" method="POST">
    <h2 class="my-4">@(Model is null ? "Add" : "Update") Category</h2>
    <div class="mb-3">
        <label class="form-label" asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>